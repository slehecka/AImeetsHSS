{
	"name": "@aimeetshss/website",
	"private": true,
	"license": "MIT",
	"type": "module",
	"engines": {
		"node": "22.x",
		"pnpm": "9.x"
	},
	"packageManager": "pnpm@9.14.4",
	"scripts": {
		"build": "astro build",
		"dev": "astro dev",
		"format:check": "prettier . \"!./@(content|public)/**\" --cache --cache-location ./.prettiercache --check --ignore-path ./.gitignore",
		"format:fix": "pnpm run format:check --write",
		"lint:check": "run-p --continue-on-error \"lint:*:check\"",
		"lint:fix": "run-p --continue-on-error \"lint:*:fix\"",
		"lint:code:check": "eslint . --cache",
		"lint:code:fix": "pnpm run lint:code:check --fix",
		"lint:styles:check": "stylelint \"./**/*.@(astro|css)\" --cache --ignore-path ./.gitignore",
		"lint:styles:fix": "pnpm run lint:styles:check --fix",
		"preinstall": "npx only-allow pnpm",
		"prepare": "run-s setup",
		"setup": "is-ci || simple-git-hooks",
		"start": "astro preview",
		"sync": "astro sync",
		"test": "exit 0",
		"test:e2e": "playwright test",
		"test:e2e:codegen": "playwright codegen",
		"test:e2e:install": "playwright install --with-deps",
		"test:e2e:ui": "playwright test --ui",
		"test:e2e:update-snapshots": "playwright test --update-snapshots",
		"types:check": "astro check",
		"validate": "run-p format:check lint:check types:check test test:e2e",
		"generate:search-index": "pagefind --site ./dist/client/"
	},
	"dependencies": {
		"@acdh-oeaw/lib": "^0.1.12",
		"@acdh-oeaw/validate-env": "^0.0.3",
		"@astrojs/mdx": "^4.0.1",
		"@astrojs/node": "^9.0.0",
		"@astrojs/react": "^4.0.0",
		"@astrojs/rss": "^4.0.9",
		"@astrojs/sitemap": "^3.2.1",
		"@astrojs/solid-js": "^5.0.0",
		"@floating-ui/dom": "^1.6.10",
		"@fontsource-variable/inter": "^5.1.0",
		"@iconify-json/lucide": "^1.2.17",
		"@iconify-json/simple-icons": "^1.2.14",
		"@keystatic/astro": "^5.0.3",
		"@keystatic/core": "^0.5.42",
		"@mdx-js/mdx": "^3.1.0",
		"@pagefind/default-ui": "^1.1.0",
		"@shikijs/rehype": "^1.24.0",
		"@sindresorhus/slugify": "^2.2.1",
		"astro": "^5.0.1",
		"astro-icon": "^1.1.4",
		"clsx": "^2.1.1",
		"date-fns": "^4.1.0",
		"estree-util-value-to-estree": "^3.2.1",
		"hast-util-heading": "^3.0.0",
		"hast-util-heading-rank": "^3.0.0",
		"hast-util-to-string": "^3.0.1",
		"lucide-react": "^0.464.0",
		"pagefind": "^1.1.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"rehype-slug": "^6.0.0",
		"remark-frontmatter": "^5.0.0",
		"remark-gfm": "^4.0.0",
		"remark-mdx-frontmatter": "^5.0.0",
		"remark-smartypants": "^3.0.2",
		"sharp": "^0.33.5",
		"shiki": "^1.24.0",
		"solid-js": "^1.9.3",
		"unist-util-visit": "^5.0.0",
		"valibot": "1.0.0-beta.9",
		"vite": "^6.0.2",
		"nodemailer": "^6.7.2"
	},
	"devDependencies": {
		"@acdh-oeaw/eslint-config": "^2.0.5",
		"@acdh-oeaw/eslint-config-astro": "^2.0.6",
		"@acdh-oeaw/eslint-config-playwright": "^2.0.6",
		"@acdh-oeaw/eslint-config-react": "^2.0.6",
		"@acdh-oeaw/eslint-config-solid": "^2.0.7",
		"@acdh-oeaw/eslint-config-tailwindcss": "^2.0.7",
		"@acdh-oeaw/prettier-config": "^2.0.0",
		"@acdh-oeaw/stylelint-config": "^2.0.5",
		"@acdh-oeaw/tsconfig": "^1.3.0",
		"@astrojs/check": "^0.9.4",
		"@astrojs/ts-plugin": "^1.10.4",
		"@playwright/test": "^1.49.0",
		"@tailwindcss/typography": "^0.5.15",
		"@types/estree": "^1.0.6",
		"@types/hast": "^3.0.4",
		"@types/mdast": "^4.0.4",
		"@types/mdx": "^2.0.13",
		"@types/node": "^22.10.1",
		"@types/react": "^18.3.12",
		"@types/react-dom": "^18.3.1",
		"@types/nodemailer": "^6.4.17",
		"axe-core": "^4.10.2",
		"axe-playwright": "^2.0.3",
		"ci-info": "^4.1.0",
		"dotenv": "^16.4.7",
		"dotenv-expand": "^12.0.1",
		"eslint": "^9.16.0",
		"eslint-config-flat-gitignore": "^0.3.0",
		"globals": "^15.13.0",
		"is-ci": "^3.0.1",
		"lint-staged": "^15.2.10",
		"mdast-util-mdx-jsx": "^3.1.3",
		"npm-run-all2": "^7.0.1",
		"postcss": "^8.4.49",
		"prettier": "^3.4.1",
		"prettier-plugin-astro": "^0.14.1",
		"retext-smartypants": "^6.2.0",
		"schema-dts": "^1.1.2",
		"simple-git-hooks": "^2.11.1",
		"stylelint": "^16.11.0",
		"tailwindcss": "^3.4.16",
		"type-fest": "^4.30.0",
		"typescript": "^5.7.2",
		"vfile": "^6.0.3"
	},
	"browserslist": {
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		],
		"production": [
			">=0.75%",
			"not dead",
			"not op_mini all"
		]
	},
	"lint-staged": {
		"*.astro": [
			"eslint --cache --fix",
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.css": [
			"stylelint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.@(js|ts|tsx)": [
			"eslint --cache --fix",
			"prettier --cache --cache-location ./.prettiercache --write"
		],
		"*.!(astro|css|js|ts|tsx),!./@(content|public)/**": "prettier --cache --cache-location ./.prettiercache --ignore-unknown --write"
	},
	"postcss": {
		"plugins": {
			"tailwindcss": {}
		}
	},
	"simple-git-hooks": {
		"pre-commit": "pnpm exec lint-staged"
	},
	"stylelint": {
		"extends": "@acdh-oeaw/stylelint-config"
	}
}
